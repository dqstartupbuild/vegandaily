{
  "expo": {
    "name": "Vegan Daily",
    "slug": "vegandaily",
    "scheme": "vegandaily",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D5A27"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.followusai.vegandaily"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "assets/adaptive-icon.png",
        "backgroundColor": "#2D5A27"
      },
      "package": "com.followusai.vegandaily",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ]
  }
}